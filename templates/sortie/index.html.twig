{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <script src="{{ asset('js/filterTable.js')}}"></script>
    
    <h1>Les sorties disponibles</h1>
    <br>
    <span>Filtrez les sorties :<span>
    <br>
    <div class="row">
            <div class="col">
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Site</label>
                    <select class="custom-select" id="searchSite" aria-label="Cherchez sur un site" id="inputGroupSelect01">
                        <option selected>Choix...</option>
                    {% for site in sites %}
                            <option selected>{{ site.nom }}</option>
                    {% else %}
                        <option option>Pas de site</option>
                    {% endfor %}
                    </select>
                    </div>
                </div>
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Sortie :</span>
                    </div>
                        <input type="text" class="form-control" name="searchInput" id="searchInput" onkeyup="searchinTable()" aria-label="Cherchez une sortie" aria-describedby="inputGroup-sizing-sm">
                </div>
            </div>
                <div class="col">
                    2 of 3
                </div>
                <div class="col">
                    3 of 3
                </div>
            </div>
        </div>
    </div>
    <div class="container">
    <table class="table" id="sortieTable" name="sortieTable" >
        <thead>
            <tr>
                <th>Quoi ?</th>
                <th>Quand ?</th>
                <th>Durée</th>
                <th>Places</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y H:i') : '' }}</td>
                <td>{{ sortie.duree }} min.</td>
                <td>{{ sortie.nbInscriptionsMax ? sortie.nbInscriptionsMax : '&infin;' }}</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('sortie_show', {'id': sortie.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune sortie trouvée !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success" href="{{ path('sortie_new') }}">Créer une sortie</a>
    </div>
{% endblock %}
