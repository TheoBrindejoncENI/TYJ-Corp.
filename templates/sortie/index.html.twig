{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <h1>Les sorties disponibles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Quoi ?</th>
                <th>Quand ?</th>
                <th>Durée</th>
                <th>Places</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y H:i') : '' }}</td>
                <td>{{ sortie.duree }}</td>
                <td>{{ sortie.getInscrits() }}/{{ sortie.nbInscriptionsMax }}</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('sortie_show', {'id': sortie.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune sortie trouvée !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('sortie_new') }}">Créer une sortie</a>
{% endblock %}
