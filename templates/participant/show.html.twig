{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}


    <div class="row align-top text-center mt-3">

        <div class="col">

            <div class="card text-center" style="min-width: 18rem">
                <div class="card-header"
                     style="background-image: url('{{ asset('img/bg_profile.jpg') }}'); background-size: cover;">
                    <img src="data:image/png;base64, {{ participant.image }}"
                         class="card-img-top rounded-circle m-3"
                         style="max-width: 150px; border:5px solid #FFF;">
                </div>
                <div class="card-body m-2">
                    <h5 class="card-title"><span
                                class="badge badge-pill badge-{{ participant.isActif ? 'success' : 'warning' }}"> </span> {{ participant.prenom }} {{ participant.nom }}
                    </h5>
                    Membre de {{ participant.site }}
                </div>

                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <h6>{{ participant.sorties.count()>1?' Sorties proposées':' Sortie proposée' }} :</h6>
                        <span class="badge badge-secondary badge-pill">{{ participant.sorties.count() }}</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col">

            <div class="card">
                <div class="card-body p-4">
                    <table class="table table-borderless table-hover ">
                        <tbody>

                        <tr>
                            <th class="text-left">Nom</th>
                            <td>{{ participant.nom }}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Prenom</th>
                            <td>{{ participant.prenom }}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Telephone</th>
                            <td>{{ participant.telephone }}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Adresse email</th>
                            <td>{{ participant.mail }}</td>
                        </tr>

                        </tbody>
                    </table>

                </div>
            </div>

            <div class="mt-4">
            {% if app.user and participant.id == app.user.id %}
                    <a class="btn-lg shadow-sm text-decoration-none text-secondary"
                       href="{{ path('participant_edit', {'id': participant.id}) }}"><i class="far fa-edit"></i> Modifier</a>
            {% endif %}
            </div>
        </div>

    </div>


    {#    Laisser cette div tranquille#}
    </div>


{% endblock %}
