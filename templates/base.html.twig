<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Farro&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/tempusdominus-bootstrap-4.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/all.min.css') }}" rel="stylesheet">

        <script src="{{ asset('js/jquery-3.4.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/popper.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/moment.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/tempusdominus-bootstrap-4.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap-select.min.js') }}" type="text/javascript"></script>

        <title>{% block title %}{% endblock %} - Sortir.com</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <header>
        {% block header %}
        <div id="wrapper">

            <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
                <div class="container">
                    <a class="navbar-brand logo" href="{{ path('home') }}"><i class="fas fa-user-friends"></i> Sortir.com</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active"><a class="nav-link"
                                                           href="{{ path('sortie_index') }}">Les sorties <span class="sr-only"></span>
                                </a></li>
                            {% if app.user %}
                                <li class="nav-item active"><a class="nav-link"
                                                               href="{{ path('participant_show', {'id': app.user.id}) }}">
                                        <img src="data:image/png;base64, {{ app.user.image }}" class="rounded-circle" style="max-width: 1.5em">
                                        Mon profil <span class="sr-only"></span>
                                    </a></li>
                                {% if app.user.isAdmin %}
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Administration
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" href="{{ path('ville_index') }}">Gérer les villes</a>
                                            <a class="dropdown-item" href="{{ path('lieu_index') }}">Gérer les lieux</a>
                                            <a class="dropdown-item" href="{{ path('site_index') }}">Gérer les sites</a>
                                        </div>
                                    </li>
                                {% endif %}
                                <li class="nav-item active"><a class="nav-link"
                                                               href="{{ path('logout') }}">Déconnexion <i class="fas fa-sign-out-alt"></i><span class="sr-only"></span>
                                    </a></li>
                            {% else %}
                                <li class="nav-item active"><a class="nav-link"
                                                               href="{{ path('login') }}"><i class="fas fa-sign-in-alt"></i> Connexion<span class="sr-only"></span>
                                    </a></li>

                                <li class="nav-item active"><a class="nav-link"
                                                               href="{{ path('participant_new') }}">Inscription<span class="sr-only"></span>
                                    </a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    {% endblock %}
    <body>
        <div class="container sticky-offset">
            {% block body %}{% endblock %}
        </div>
        <br />
        <footer class="custom-foot bg-secondary">
                <div class="container">
                    <div class="text-center py-3 text-white">Copyright &copy; Sortir.com est une réalisation exceptionnelle de la TYJ Corp. Tous droits réservés.</div>
                </div>
        </footer>
    </body>
</html>
